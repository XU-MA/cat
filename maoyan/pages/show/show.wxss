/* pages/show/show.wxss */
page{
  background-color: #EDEDED;
  margin: 0;
  padding: 0;
}
.top{
  width: 100%;
  background-color: #EDEDED;
  position: fixed;
  top: 0;
  z-index: 10;
}
.top>view{
  padding: 20rpx 30rpx;
  font-size: 30rpx;
}
.top>view>image{
  width: 30rpx;
  height: 30rpx;
  margin-top: -2rpx;
  vertical-align: middle;
}
.top input{
  border-radius: 10rpx;
  position: absolute;
  top: 6rpx;
  left: 140rpx;
  background-color: #fff;
  width: 500rpx;
  font-size:30rpx;
  text-align: center;
  padding-left:20rpx;
  margin-top: 10rpx;
  color: #BCBCBC;
}
.top>image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 28rpx;
  left: 240rpx;
  z-index: 10;
}
.find{
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  text-align: center;
}
.find image{
  width: 345rpx;
  height: 200rpx;
}
.find>view:nth-of-type(1){
  padding: 20rpx 0;
  font-size: 35rpx;
  font-weight: 600;
}
.find>view:nth-of-type(2){
  padding-bottom: 20rpx;
}
.find>view:nth-of-type(2)>view:nth-of-type(1){
  margin-left: -3rpx;
}
.find>view:nth-of-type(2)>view{
  text-align: left;
  display: inline-block;
  margin-left: 20rpx;
  position: relative;
}
.find>view:nth-of-type(2)>view>view text{
  position: absolute;
  top: 90rpx;
  left: 0;
  font-size: 30rpx;
  color: white;
  background-color: black;
  padding: 5rpx 10rpx;
}
.find>view:nth-of-type(2)>view>text{
  position: absolute;
  top: 142rpx;
  left: 0;
  font-size: 25rpx;
  background-color: #ff9900;
  padding: 5rpx 10rpx;
}
.popular{
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  text-align: center;
  padding-bottom: 20rpx;
}
.popular>view:nth-of-type(1){
  padding: 20rpx 0;
}
.popular>view:nth-of-type(1)>text:nth-of-type(1){
  font-size: 35rpx;
  font-weight: 600;
}
.popular>view:nth-of-type(1)>text:nth-of-type(2){
  float: right;
  display: inline-block;
  margin-top: 10rpx;
  font-size: 27rpx;
  color: #dddada;
  margin-right: 20rpx;
}
.popular>view:nth-of-type(2){
  width: 100%;
}
.popular image{
  width: 150rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.popular>view:nth-of-type(2)>view:nth-of-type(1){
  margin-left: -3rpx;
}
.popular>view:nth-of-type(2)>view{
  width: 45%;
  padding-left: 10rpx;
  background-color: rgb(241, 238, 238);
  display: inline-block;
  margin-left: 30rpx;
  text-align: left;
}
.popular>view:nth-of-type(2)>view>view:nth-of-type(1){
  font-size: 35rpx;
  font-weight: 600;
  padding-top: 20rpx;
}
.popular>view:nth-of-type(2)>view>view:nth-of-type(2){
  padding-bottom: 10rpx;
}
.font{
  font-size: 30rpx;
  color: #BFBFBF;
}
.jian{
  font-size: 35rpx;
  color: #BFBFBF;
  display: inline-block;
  margin-left: 130rpx;
}
.popular>view:nth-of-type(2)>view>view{
  display: inline-block;
}
.zi{
  width: 150rpx;
  font-size: 30rpx;
  color: #B8B8B8;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
}
.right{
  margin-left: 20rpx;
}
.two{
  position: relative;
  left: -15rpx;
}

